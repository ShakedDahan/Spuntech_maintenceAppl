<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/whitebg"
    tools:context=".ui.faults.NewPeriodic" >

    <EditText
        android:id="@id/firstnameNewPeriodicFaultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="59dp"
        android:backgroundTint="#1F2354"
        android:hint="פותח העבודה"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:textAlignment="viewEnd"
        android:textColor="#1F2354"
        android:textColorHint="#1F2354"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458" />

    <EditText
        android:id="@id/dateNewPeriodicFaultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstnameNewPeriodicFaultText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="59dp"
        android:backgroundTint="#1F2354"
        android:hint="תאריך פתיחת העבודה"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:textAlignment="viewEnd"
        android:textColor="#1F2354"
        android:textColorHint="#1F2354"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458" />

    <EditText
        android:id="@+id/descriptionNewPeriodicFault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/priorityNewPeriodicFaultSpinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:backgroundTint="#1F2354"
        android:hint="תיאור"
        android:imeOptions="actionNext"
        android:inputType="textMultiLine"
        android:textAlignment="viewEnd"
        android:textColor="#1F2354"
        android:textColorHint="#1F2354"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458" />

    <Button
        android:id="@+id/butttonNewPeriodicFault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionNewPeriodicFault"
        android:layout_marginTop="6dp"
        android:background="@drawable/button_blue"
        android:text="פתיחת עבודה"
        android:textColor="#ffff" />

    <Spinner
        android:id="@+id/subUnitNewPeriodicFaultSpinner"
        style="@style/spinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/unitNewPeriodicFaultSpinner"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/spinneritems"
        android:textAlignment="textEnd"
        tools:listitem="@android:layout/simple_list_item_1" />


    <Spinner
        android:id="@+id/notifyNewPeriodicSpinner"
        style="@style/spinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/treatTypePeriodicFaultSpinner"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/notiftyPerodicArray"
        android:textAlignment="textEnd"
        tools:listitem="@android:layout/simple_list_item_1" />
    <Spinner
        android:id="@+id/handler1NewPeriodicSpinner"
        style="@style/spinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notifyNewPeriodicSpinner"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/handlersArray"
        android:textAlignment="textEnd"
        tools:listitem="@android:layout/simple_list_item_1" />
    <Spinner
        android:id="@+id/handler2NewPeriodicSpinner"
        style="@style/spinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/handler1NewPeriodicSpinner"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/handlersArray"
        android:textAlignment="textEnd"
        tools:listitem="@android:layout/simple_list_item_1" />
    <Spinner
        android:id="@+id/handler3NewPeriodicSpinner"
        style="@style/spinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/handler2NewPeriodicSpinner"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/handlersArray"
        android:textAlignment="textEnd"
        tools:listitem="@android:layout/simple_list_item_1" />
    <Spinner
        android:id="@+id/treatTypePeriodicFaultSpinner"
        style="@style/spinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/faultTypeNewPeriodicFaultSpinner"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/faultTreatTypeArray"
        android:textAlignment="textEnd"
        tools:listitem="@android:layout/simple_list_item_1" />

    <Spinner
        android:id="@+id/faultTypeNewPeriodicFaultSpinner"
        style="@style/spinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subUnitNewPeriodicFaultSpinner"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/faultTypeArray"
        android:textAlignment="textEnd"
        tools:listitem="@android:layout/simple_list_item_1" />

    <Spinner
        android:id="@+id/unitNewPeriodicFaultSpinner"
        style="@style/spinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateNewPeriodicFaultText"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/unitArray"
        android:textAlignment="textEnd"
        tools:listitem="@android:layout/simple_list_item_1" />
    <Spinner
        android:id="@+id/priorityNewPeriodicFaultSpinner"
        style="@style/spinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handler3NewPeriodicSpinner"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/priorityarray"
        android:textAlignment="textEnd"
        tools:listitem="@android:layout/simple_list_item_1" />
    <TextView
        android:id="@+id/TreatTypeNewPeriodicText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/faultTypeNewPeriodicFaultSpinner"
    android:layout_marginStart="70dp"
    android:layout_marginTop="20dp"
    android:text="סוג טיפול"
    android:textColor="#1F2354"
    android:alpha="0.5"/>
    <TextView
        android:id="@+id/unitNewPeriodicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateNewPeriodicFaultText"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="מכלול"
        android:textColor="#1F2354"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/faultTypeNewPeriodicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subUnitNewPeriodicFaultSpinner"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="סוג עבודה"
        android:textColor="#1F2354"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/subUnitNewPeriodicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unitNewPeriodicFaultSpinner"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="תת מכלול"
        android:textColor="#1F2354"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/notiftyNewPeriodicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/treatTypePeriodicFaultSpinner"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="תזכורת"
        android:textColor="#1F2354"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/priorityNewPeriodicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handler3NewPeriodicSpinner"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="דחיפות"
        android:textColor="#1F2354"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/handler1NewPeriodicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifyNewPeriodicSpinner"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="מטפל בעבודה #1"
        android:textColor="#1F2354"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/handler2NewPeriodicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handler1NewPeriodicSpinner"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="מטפל בעבודה #2"
        android:textColor="#1F2354"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/handler3NewPeriodicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handler2NewPeriodicSpinner"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="מטפל בעבודה #3"
        android:textColor="#1F2354"
        android:alpha="0.5"/>
</RelativeLayout>
