<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/whitebg"
    tools:context=".ui.faults.newfault"
    android:configChanges="orientation"
    android:screenOrientation="portrait">

    <EditText
        android:id="@+id/newFaultEmployeeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="59dp"
        android:backgroundTint="@color/colorBlue"
        android:hint="פותח העבודה"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorBlue"
        android:textColorHint="@color/colorBlue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458" />

    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newFaultEmployeeName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="59dp"
        android:backgroundTint="@color/colorBlue"
        android:hint="תאריך פתיחת העבודה"
        android:imeOptions="actionNext"
        android:inputType="none"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorBlue"
        android:textColorHint="@color/colorBlue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/priorityNewFaultText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:backgroundTint="@color/colorBlue"
        android:hint="תיאור"
        android:imeOptions="actionNext"
        android:inputType="textMultiLine"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorBlue"
        android:textColorHint="@color/colorBlue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458" />

    <Button
        android:id="@+id/button10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_blue"
        android:text="פתיחת עבודה"
        android:textColor="@color/colorWhite" />

    <Spinner
        android:id="@+id/subUnitNewFaultSpinner"
        style="@style/spinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/unitNewFaultSpinner"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/forOpenSubUnitArray"
        android:textAlignment="textEnd"
        tools:listitem="@android:layout/simple_list_item_1" />

    <Spinner
        android:id="@+id/treatTypeNewFaultSpinner"
        style="@style/spinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/faultTypeNewFaultSpinner"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/faultTreatTypeArray"
        android:textAlignment="textStart"
        tools:listitem="@android:layout/simple_list_item_1" />

    <Spinner
        android:id="@+id/faultTypeNewFaultSpinner"
        style="@style/spinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subUnitNewFaultSpinner"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/faultTypeArray"
        android:textAlignment="textEnd"
        tools:listitem="@android:layout/simple_list_item_1" />

    <Spinner
        android:id="@+id/unitNewFaultSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/handlersArray"
        android:textAlignment="textEnd"
        style="@style/spinnerTheme"
        tools:listitem="@android:layout/simple_list_item_1"/>

    <Spinner
        android:id="@+id/handler1NewFaultSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/treatTypeNewFaultSpinner"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/handlersArray"
        android:textAlignment="textStart"
        style="@style/spinnerTheme"
        tools:listitem="@android:layout/simple_list_item_1" />
    <Spinner
        android:id="@+id/handler2NewFaultSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/handler1NewFaultSpinner"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/handlersArray"
        android:textAlignment="textStart"
        style="@style/spinnerTheme"
        tools:listitem="@android:layout/simple_list_item_1" />

    <Spinner
        android:id="@+id/handler3NewFaultSpinner"
        style="@style/spinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/handler2NewFaultSpinner"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/handlersArray"
        android:textAlignment="textStart"
        tools:listitem="@android:layout/simple_list_item_1" />

    <Spinner
        android:id="@+id/priorityNewFaultSpinner"
        style="@style/spinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/handler3NewFaultSpinner"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/priorityarray"
        android:textAlignment="textStart"
        tools:listitem="@android:layout/simple_list_item_1" />

    <TextView
        android:id="@+id/handler1text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/treatTypeNewFaultSpinner"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:alpha="0.5"
        android:text="מטפל בעבודה #1"
        android:textColor="@color/colorBlue" />
    <TextView
        android:id="@+id/handler2text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handler1NewFaultSpinner"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:alpha="0.5"
        android:text="מטפל בעבודה #2"
        android:textColor="@color/colorBlue" />
    <TextView
        android:id="@+id/handler3text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handler2NewFaultSpinner"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:alpha="0.5"
        android:text="מטפל בעבודה #3"
        android:textColor="@color/colorBlue" />
    <TextView
        android:id="@+id/unittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="מכלול"
        android:textColor="@color/colorBlue"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/subunittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unitNewFaultSpinner"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="תת מכלול"
        android:textColor="@color/colorBlue"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/faulttypetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subUnitNewFaultSpinner"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="סוג עבודה"
        android:textColor="@color/colorBlue"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/treattypetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/faultTypeNewFaultSpinner"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="סוג טיפול"
        android:textColor="@color/colorBlue"
        android:alpha="0.5"/>

    <TextView
        android:id="@+id/priorityNewFaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handler3NewFaultSpinner"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="דחיפות"
        android:textColor="@color/colorBlue"
        android:alpha="0.5"/>
</RelativeLayout>
