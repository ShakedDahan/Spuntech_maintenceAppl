<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/whitebg"
    android:layout_margin="8dp"
    android:orientation="vertical"


    app:cardCornerRadius="2dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/whitebg"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/FaultId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="מספר עבודה : "
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/Unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="מכלול : " />

        <TextView
            android:id="@+id/SubUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="תת מכלול :" />

        <TextView

            android:id="@+id/Employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="פותח עבודה : " />

        <TextView
            android:id="@+id/Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="תאריך פתיחת עבודה : " />

        <TextView
            android:id="@+id/FaultStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="סטאטוס עבודה : " />

        <TextView
            android:id="@+id/FaultHandler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="מטפל בעבודה : " />


    </LinearLayout>

</androidx.cardview.widget.CardView>










