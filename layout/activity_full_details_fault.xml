<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/whitebg"
    tools:context=".ui.faults.newfault"
    >

    <EditText
        android:id="@+id/firstnamefd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="59dp"
        android:backgroundTint="@color/colorBlue"
        android:hint="פותח העבודה"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorBlue"
        android:textColorHint="@color/colorBlue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458" />

    <EditText
        android:id="@+id/datefd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstnamefd"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="59dp"
        android:backgroundTint="@color/colorBlue"
        android:hint="תאריך פתיחת העבודה"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorBlue"
        android:textColorHint="@color/colorBlue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458" />

    <EditText
        android:id="@+id/descriptionfd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notifyNewFaultSpinnerfd"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:backgroundTint="@color/colorBlue"
        android:hint="תיאור"
        android:imeOptions="actionNext"
        android:inputType="textMultiLine"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorBlue"
        android:textColorHint="@color/colorBlue"
        android:textSize="14sp"
        android:maxLines="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458" />

    <Button
        android:id="@+id/button10fd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionfd"
        android:layout_marginTop="6dp"
        android:background="@drawable/button_blue"
        android:text="עדכן עבודה"
        android:textColor="@color/colorWhite" />

    <Spinner
        android:id="@+id/subUnitNewFaultSpinnerfd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/unitNewFaultSpinnerfd"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/forOpenSubUnitArray"
        android:textAlignment="textEnd"
        style="@style/spinnerTheme"
        tools:listitem="@android:layout/simple_list_item_1" />

    <Spinner
        android:id="@+id/treatTypeNewFaultSpinnerfd"
        style="@style/spinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/faultTypeNewFaultSpinnerfd"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/faultTreatTypeArray"
        android:textAlignment="textStart"
        tools:listitem="@android:layout/simple_list_item_1" />

    <Spinner
        android:id="@+id/faultTypeNewFaultSpinnerfd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subUnitNewFaultSpinnerfd"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/faultTypeArray"
        android:textAlignment="textStart"
        style="@style/spinnerTheme"
        tools:listitem="@android:layout/simple_list_item_1" />

    <Spinner
        android:id="@+id/unitNewFaultSpinnerfd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/datefd"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/handlersArray"
        android:textAlignment="textStart"
        style="@style/spinnerTheme"
        tools:listitem="@android:layout/simple_list_item_1"/>

    <Spinner
        android:id="@+id/handler1NewFaultSpinnerfd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/treatTypeNewFaultSpinnerfd"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/handlersArray"
        android:textAlignment="textStart"
        style="@style/spinnerTheme"
        tools:listitem="@android:layout/simple_list_item_1" />

    <Spinner
        android:id="@+id/handler2NewFaultSpinnerfd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/handler1NewFaultSpinnerfd"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/handlersArray"
        android:textAlignment="textStart"
        style="@style/spinnerTheme"
        tools:listitem="@android:layout/simple_list_item_1" />

    <Spinner
        android:id="@+id/handler3NewFaultSpinnerfd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/handler2NewFaultSpinnerfd"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/handlersArray"
        android:textAlignment="textStart"
        style="@style/spinnerTheme"
        tools:listitem="@android:layout/simple_list_item_1" />
    <Spinner
        android:id="@+id/priorityNewFaultSpinnerfd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/handler3NewFaultSpinnerfd"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/priorityarray"
        android:textAlignment="textStart"
        style="@style/spinnerTheme"
        tools:listitem="@android:layout/simple_list_item_1"/>
    <Spinner
        android:id="@+id/notifyNewFaultSpinnerfd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusNewFaultSpinnerfd"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/priorityarray"
        android:textAlignment="textStart"
        style="@style/spinnerTheme"
        tools:listitem="@android:layout/simple_list_item_1"/>
    <Spinner
        android:id="@+id/statusNewFaultSpinnerfd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/priorityNewFaultSpinnerfd"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:clickable="true"
        android:clipChildren="false"
        android:entries="@array/statusArray"
        android:textAlignment="textStart"
        style="@style/spinnerTheme"
        tools:listitem="@android:layout/simple_list_item_1"/>
    <TextView
        android:id="@+id/handler1textfd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/treatTypeNewFaultSpinnerfd"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="מטפל בעבודה #1"
        android:textColor="@color/colorBlue"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/handler2textfd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handler1NewFaultSpinnerfd"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="מטפל בעבודה #2"
        android:textColor="@color/colorBlue"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/handler3textfd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handler2NewFaultSpinnerfd"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="מטפל בעבודה #3"
        android:textColor="@color/colorBlue"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/unittextfd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datefd"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="מכלול"
        android:textColor="@color/colorBlue"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/subunittextfd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unitNewFaultSpinnerfd"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="תת מכלול"
        android:textColor="@color/colorBlue"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/faulttypetextfd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subUnitNewFaultSpinnerfd"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="סוג עבודה"
        android:textColor="@color/colorBlue"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/treattypetextfd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/faultTypeNewFaultSpinnerfd"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="סוג טיפול"
        android:textColor="@color/colorBlue"
        android:alpha="0.5"/>

    <TextView
        android:id="@+id/priorityNewFaultTextfd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handler3NewFaultSpinnerfd"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="דחיפות"
        android:textColor="@color/colorBlue"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/notifyNewFaultTextfd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusNewFaultSpinnerfd"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="תזכורת"
        android:textColor="@color/colorBlue"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/statusNewFaultTextfd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priorityNewFaultSpinnerfd"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="סטאטוס"
        android:textColor="@color/colorBlue"
        android:alpha="0.5"/>
</RelativeLayout>
