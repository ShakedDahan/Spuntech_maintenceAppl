<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/periodic_fault_item_date_txt"
        android:layout_width="145dp"
        android:textColor="#1F2354"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:background="@drawable/table_content_cell_bg"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/periodic_fault_item_notify_txt"
        android:layout_width="145dp"
        android:textColor="#1F2354"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:background="@drawable/table_content_cell_bg"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/periodic_fault_item_unit_txt"
        android:layout_width="145dp"
        android:textColor="#1F2354"
        android:layout_height="wrap_content"
        android:background="@drawable/table_content_cell_bg"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/periodic_fault_item_Faulttype_txt"
        android:layout_width="145dp"
        android:textColor="#1F2354"
        android:layout_height="match_parent"
        android:background="@drawable/table_content_cell_bg"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/periodic_fault_item_status_txt"
        android:layout_width="145dp"
        android:textColor="#1F2354"
        android:layout_height="match_parent"
        android:background="@drawable/table_content_cell_bg"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/periodic_fault_item_Handler1_txt"
        android:layout_width="145dp"
        android:textColor="#1F2354"
        android:layout_height="match_parent"
        android:background="@drawable/table_content_cell_bg"
        android:textSize="18sp" />



    <TextView
        android:id="@+id/periodic_fault_item_priority_txt"
        android:layout_width="145dp"
        android:textColor="#1F2354"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:background="@drawable/table_content_cell_bg"
        android:textSize="18sp" />




</LinearLayout>